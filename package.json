{
  "name": "yt-downloader",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:renderer": "vite",
    "dev:main": "vite & NODE_ENV=development electron .",
    "build": "vite build",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "vite build && electron-builder",
    "typecheck": "tsc",
    "python:install": "pip install -r python/requirements.txt",
    "python:typecheck": "mypy python/"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "appId": "com.ytdownloader.app",
    "productName": "YouTube Downloader",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "python/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    }
  }
}